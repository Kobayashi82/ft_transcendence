FROM node:20-alpine

WORKDIR /app

# Instalar dependencias de desarrollo
COPY package*.json ./
RUN npm install

# Copiar c√≥digo fuente
COPY . .

# Puerto por defecto
EXPOSE 3000

# Entorno de desarrollo
ENV NODE_ENV=development

# Comando para iniciar en modo desarrollo con hot reload
CMD ["npm", "run", "dev"]